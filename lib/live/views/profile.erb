<div class="buttons page">

  <form action="profile" method="POST">

    <div style="float: left; margin-right: 40px;">

      <label for="login">Username</label><br/>
      <input type="text" name="login" value="<%= user.username %>" />

      <br /><br />

      <label for="email">E-mail</label><br/>
      <input type="text" name="email" value="<%= user.email %>" />

      <br /><br />

      <label for="decrypted_password">Change Password</label><br/>
      <input type="password" name="decrypted_password" />

    </div>

    <div style="float: left">

      <label for="name">Real Name</label><br/>
      <input type="text" name="name" value="<%= user.name %>" />

      <br /><br />

      <label for="email">Website</label><br/>
      <input type="text" name="website" value="<%= user.website %>" />

      <br /><br />

      <label for="decrypted_confirmation">Confirm</label><br/>
      <input type="password" name="decrypted_confirmation" />

    </div>

    <br style="clear: both;"/><br />

    <div class="buttons">
      <a href="/dashboard">Cancel</a>
      <button type="submit" value="register">Save</button>
    </div>

  </form>

</div>
