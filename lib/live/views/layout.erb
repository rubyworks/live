<?xml version="1.0" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title>Facets Live! <%= @title %></title>

  <meta http-equiv="Content-Script-Type" content="text/javascript" />
  <meta http-equiv="Content-Style-Type" content="text/css" />
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta http-equiv="expires" content="0" />
  <meta name="description" content="Description for search engines" />
  <meta name="generator" content="Sinatra <%= Sinatra::VERSION %>" />
  <meta name="keywords" content="Ruby Facets Live! is a Web 2.0 Ruby script distribution system." />
  <meta name="author" content="Thomas Sawyer (Trans)" />
  <meta name="date" content="<%= Time.now.iso8601 %>" />

  <!-- jquery -->
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"></script>
  <script src="http://cdn.jquerytools.org/1.1.2/jquery.tools.min.js"></script>
  <script src="/js/facetslive.js"></script>

  <!-- css -->
  <link rel="stylesheet" type="text/css" media="screen" href="/css/reset.css">
  <link rel="stylesheet" type="text/css" media="screen" href="/css/screen.css">
  <link rel="stylesheet" type="text/css" media="screen" href="/css/screen/tabs.css">
  <link rel="stylesheet" type="text/css" media="screen" href="/css/screen/buttons.css">
  <script>
    $(document).ready(function(){
      $('.flash').fadeOut(3500);
    });
  </script>

</head>
<body>
<div style="background: #fff;">

  <div id="header">
  <div class="page">
    <div>
      <a href="/"><img src="/img/gem1.png" /></a>
      <a href="/"><img src="/img/live-sm.png" style="" /></a>
      <!-- <div style="color: white;">A revolution is application logic delivery</div> -->
    </div>

    <div id="info">
      <div class="menu">
      <% if logged_in? %>
        <a href="/dashboard">dashboard</a>
        <a href="/browse/A">browse</a>
        <a href="/profile">profile</a>
        <a href="/logout">sign out</a>
      <% else %>
        <a href="/login">sign in</a>
        <a href="/register">sign up</a>
        <a href="/browse/a">browse</a>
      <% end %>
      </div>
      <div class="search">
        <form name="search" action="/search" method="POST">
          <input name="criteria" value="Search scripts..."
               onfocus="if(this.value=='Search scripts...')this.value='';"
               onblur="if(this.value=='')this.value='Search scripts...';"
               onKeyPress="return submit_enter(this,event);"
          />
        </form>
      </div>
    </div>
  </div>
  </div>

  <% if flash[:message] %>
    <div class="flash">
      <div><%= flash[:message] %></div>
    </div>
  <% end %>

  <%= yield %>

  <br/><br/>
</div>

  <div id="footer">
  <div class="page labels" style="border-top: 0px solid #ccc;">
    <div class="copyright" style="margin: 10px 0;">
      Facets Live, Copyright (c) 2010 Thomas Sawyer
    </div>
  </div>
  </div>

</body>
</html>

